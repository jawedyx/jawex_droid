<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:foreground="#7c7e7d78"
        android:baselineAligned="false">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            
                <ImageView
                    android:id="@+id/card_icon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_content_paste_black_24dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="5dp" />
    
                <TextView
                    android:id="@+id/card_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="10"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center"
                    android:maxLength="28" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="visible"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/card_icon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_date_range_black_24dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_gravity="center|start" />

            <TextView
                android:id="@+id/card_text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="10"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/cursorId"
                android:visibility="invisible"
                android:text=""
                android:foreground="#493d0f0f"
                android:layout_weight="0"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>